@model LaboruTKM.Common.SectionDTO

@{
    ViewBag.Title = "Evaluation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@Model.Name</h1>

    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-header">
                Descripción
            </div>
            <div class="panel-body">
                @Model.Description
            </div>
        </div>

    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-header">
                Preguntas
            </div>
            <div class="panel-body">
                @if (Model.Questions != null && Model.Questions.Count > 0)
                {
                    <ul class="list-group">
                        @foreach (var item in Model.Questions)
                        {
                            <li class="list-group-item">
                                <a href="@Url.Content("~/Admin/AdminHome/Question/" + item.QuestionId)">@item.QuestionId - @item.Text</a>

                                @if (item.Answers != null && @item.Answers.Count > 0)
	                            {
                                    <ul>
                                        @foreach (var aitem in item.Answers)
	                                    {
                                            <li>
                                                @if (item.RightAnswerId == aitem.AnswerId)
                                                {
                                                    <a href="@Url.Content("~/Admin/AdminHome/Answer/" + item.QuestionId)">@aitem.AnswerId - @aitem.Text <i class="fa fa-check fa-fw"></i></a>    
                                                }else
                                                {
                                                    <a href="@Url.Content("~/Admin/AdminHome/Answer/" + item.QuestionId)">@aitem.AnswerId - @aitem.Text</a>
                                                }                                                
                                            </li>
	                                    }
                                    </ul>		 
	                            }
                            </li>
                        }
                    </ul>
                }
                
            </div>
        </div>

    </div>
    <!-- /.col-lg-12 -->
</div>

