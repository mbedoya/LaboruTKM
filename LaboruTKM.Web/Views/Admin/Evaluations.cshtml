@section scripts{
    
    <script>

        var siteUrlPrefix = '@Url.Content("~/")';
        siteUrlPrefix = siteUrlPrefix.substring(1, siteUrlPrefix.length);

        var controllerName = "api/Evaluation";

        var rowTemplate = '<tr >' +
                                '<td>_id</td>' +
                                '<td>_name</td>' +
                                '<td>_description</td>' +
                                '<td class="center">_date_created</td>' +
                                '</tr>';

        function getDateDiff(date) {

            var date = moment(date);
            var now = moment();

            var days = now.diff(date, 'days');

            if (days == 0) {

                var hours = now.diff(date, 'hours');

                if (hours == 0) {

                    var minutes = now.diff(date, 'minutes');

                    if (minutes == 0) {

                        return "recién";

                    } else {
                        return "hace " + minutes + " minutos";
                    }                    

                } else {
                    return "hace " + hours + " horas";
                }

                
            } else {
                'hace ' + days + ' días'
            }
        }

        function getHtmlEvalElement(obj) {

            var date = moment(obj.DateCreated);
            var now = moment();
            
            return rowTemplate.replace("_id", obj.Id)
                .replace("_name", obj.Name)
                .replace("_description", obj.Description)
                .replace("_date_created", getDateDiff(obj.DateCreated));
        }

        function getAllEvaluations() {

            ajaxGet(controllerName, {}, function (success, data) {

                if (success) {

                    console.log(data);

                    if (data && data.length > 0) {

                        for (var i = 0; i < data.length; i++) {

                            var obj = data[i];
                            var htmlElement = getHtmlEvalElement(obj);

                            $("#evals-table tbody").append(htmlElement);
                        }
                    } else {
                        console.log("no elements in table");
                    }

                } else {

                    console.log("error");
                    console.log(data);
                }

            });
        }

        $(document).ready(function () {

            getAllEvaluations();

        });

    </script>
       
}